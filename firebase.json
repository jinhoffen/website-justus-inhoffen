{
  "hosting": {
    "public": "_site",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects": [
      {
        "source": "/.*",
        "destination": "https://www.justus-inhoffen.com/:splat",
        "type": 301
      }, {
        "source" : "/blog.html",
        "destination" : "/blog/",
        "type" : 301
      }, {
        "source" : "/research.html",
        "destination" : "/research/",
        "type" : 301
      }, {
        "source" : "/redirect_phd_chapter_2.html",
        "destination" : "/phd-dissertation/chapter/2",
        "type" : 301
      }, {
        "source" : "/redirect_phd_chapter_3.html",
        "destination" : "/phd-dissertation/chapter/3",
        "type" : 301
      }, {
        "source" : "/redirect_phd_chapter_4.html",
        "destination" : "/phd-dissertation/chapter/4",
        "type" : 301
      }
    ]
  },
  "emulators": {
    "hosting": {
      "port": 5033
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
